#-------------------------------------botones---------------------------
def construir():
    primerpaso.set( A.get() +  "," + " " + N.get() + "." + " "  + "(" + year.get() + ")" + "." + " "  + t.get() + "." + " "  + Ed.get() + "." + " ") 
def clear():
    A.delete(0, 'end')
    N.delete(0, 'end')
    year.delete(0, 'end')
    t.delete(0, 'end')
    Ed.delete(0, 'end')
    referencia.delete(0, 'end')

aceptar=Button(root, text="Aceptar", command=construir)
aceptar.place(x=240, y= 243)
cancelar=Button(root, text="Cancelar", command=clear)
cancelar.place(x=300, y= 243)

